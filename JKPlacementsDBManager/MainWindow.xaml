<Window x:Class="JKPlacementsDBManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="J.K.I.A.P.T Placement Cell Database Manager" Height="683" Width="858" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <ScrollViewer x:Name="RefreshButton" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas Width="810" Height="624">
                <Label Content="Developed by Souham Biswas" Canvas.Left="629" Width="181" FontWeight="Thin" FontFamily="Consolas" Opacity="0.5"/>
                <Button x:Name="ConnSettingsButton" Content="    Change Server &#xD;&#xA;Connection Settings" Canvas.Left="10" Canvas.Top="558" Width="120" Height="56" Click="ConnSettingsButton_Click"/>
                <DataGrid x:Name="DGrid" Canvas.Left="11" Canvas.Top="50" Height="229" Width="513" IsReadOnly="True" AutoGeneratedColumns="DGrid_AutoGeneratedColumns" AutoGeneratingColumn="DGrid_AutoGeneratingColumn" SelectionChanged="DGrid_SelectionChanged" CurrentCellChanged="DGrid_CurrentCellChanged">
                    <DataGrid.ItemBindingGroup>
                        <BindingGroup/>
                    </DataGrid.ItemBindingGroup>
                </DataGrid>
                <Button x:Name="RefreshButton1" Content="Refresh" Canvas.Left="169" Canvas.Top="558" Width="93" Height="56" Click="RefreshButton1_Click"/>
                <Button x:Name="DBConnectionTestButton" Content="Test Database&#xD;&#xA;  Connection" Canvas.Left="293" Canvas.Top="558" Width="87" Height="56" Click="DBConnectionTestButton_Click"/>
                <Border BorderBrush="Black" BorderThickness="1" Height="564" Canvas.Left="552" Canvas.Top="50" Width="248">
                    <TextBlock x:Name="InfoBoxBlock" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="15" FontFamily="Calibri"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" Height="229" Canvas.Left="11" Canvas.Top="298" Width="513">
                    <Grid Margin="9,35,205,35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Width="Auto" Height="Auto">Sr. No.</Label>
                        <Label Grid.Row="1" Grid.Column="0" Width="Auto" Height="Auto">Company Name</Label>
                        <Label Grid.Row="2" Grid.Column="0" Width="Auto" Height="Auto">Date of Approach</Label>
                        <Label Grid.Row="3" Grid.Column="0" Width="Auto" Height="Auto">Response</Label>
                        <Label Grid.Row="4" Grid.Column="0" Width="Auto" Height="Auto" Margin="0,2,0,-2">Stream</Label>
                        <TextBox x:Name="SrNoField" Grid.Row="0" Grid.Column="1" Width="50" Height="20" Margin="0,0,93,11" TextChanged="SrNoField_TextChanged"/>
                        <TextBox x:Name="CompanyNameField" Grid.Row="1" Grid.Column="1" Height="20" Margin="1,1,-44,10" TextChanged="CompanyNameField_TextChanged"/>
                        <DatePicker x:Name="DateOfApproachField" Grid.Column="1" Margin="0,0,38,5" Grid.Row="2" DisplayDate="2013-06-04" SelectedDateChanged="DateOfApproachField_SelectedDateChanged"/>
                        <ComboBox x:Name="ResponseBox" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="3" VerticalAlignment="Top" Width="77" IsReadOnly="True" SelectionChanged="ResponseBox_SelectionChanged">
                            <ComboBoxItem Content="Yes"/>
                            <ComboBoxItem Content="No"/>
                            <ComboBoxItem Content="Floating"/>
                            <ComboBoxItem Content="All"/>
                        </ComboBox>
                        <ComboBox x:Name="StreamBox" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="4" VerticalAlignment="Top" Width="77" IsReadOnly="True" SelectionChanged="StreamBox_SelectionChanged">
                            <ComboBoxItem Content="CSE"/>
                            <ComboBoxItem Content="ECE"/>
                            <ComboBoxItem Content="CSE/ECE"/>
                            <ComboBoxItem Content="All"/>
                        </ComboBox>


                    </Grid>
                </Border>
                <Label Content="Search" Canvas.Left="11" Canvas.Top="298" Opacity="0.6"/>
                <Button x:Name="ModifyDBButton" Content="Modify Database" Canvas.Left="414" Canvas.Top="558" Width="110" Height="56" Click="ModifyDBButton_Click"/>
                <Button x:Name="SearchButton" Content="Search Entry" Canvas.Left="337" Canvas.Top="342" Width="158" Height="46" Click="SearchButton_Click"/>
                <Button x:Name="ClearEntriesButton" Content="Clear entries" Canvas.Left="337" Canvas.Top="442" Width="158" Height="42" Click="ClearEntriesButton_Click"/>
                <CheckBox x:Name="QueryLogCheckBox" Content="Maintain Query Log" Canvas.Left="337" Canvas.Top="408"/>
                <CheckBox x:Name="InstaSearchCheckBox" Content="Enable InstaSearch" Canvas.Left="337" Canvas.Top="309" IsChecked="True"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>